{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@data/*": ["src/data/*"],
      "@services/*": ["src/services/*"],
      "@packages/*": ["src/packages/*"],
    },
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
  },
}
